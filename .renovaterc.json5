{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  // MR の自動マージは行わない
  "automerge": false,
  "platformAutomerge": false,
  "labels": ["dependencies"],
  "assignees": [],
  "reviewers": [],
  // MR の作成上限をなくす
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "lockFileMaintenance": {
    "enabled": true,
  },
  "packageRules": [
    {
      // Ruby: Ruby on Rails のパッケージをまとめてアップデートする
      "matchDatasources": ["rubygems"],
      "groupName": "RubyGems packages",
      "rangeStrategy": "update-lockfile",
      "automerge": false
    },
    {
      // Ruby: アップデートに問題のあるgemをバージョン固定する
      "matchDatasources": ["rubygems"],
      "matchPackageNames": [
        "puma" // テストのために固定する
      ],
      "enabled": false
    },
    {
      // Ruby: Ruby自体のアップデートは行わない
      "matchPackageNames": ["ruby"],
      "groupName": "Ruby",
      "enabled": false
    }
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true,
  },
  "packageRules": [
    {
      // Ruby: Ruby on Rails のパッケージをまとめてアップデートする
      "matchDatasources": ["rubygems"],
      "groupName": "RubyGems packages",
      "rangeStrategy": "update-lockfile",
      "automerge": false
    }
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  // MR の自動マージは行わない
  "automerge": false,
  "platformAutomerge": false,
  "labels": ["dependencies"],
  "assignees": [],
  "reviewers": [],
  // MR の作成上限をなくす
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  // majorの更新が入っていても同じMRにまとめる
  "separateMajorMinor": false,
  "lockFileMaintenance": {
    "enabled": true,
  },
  // .ruby-version の依存関係の自動更新
  "managerFilePatterns": [
    "/(^|/)\\.ruby-version$/"
  ],
  "versioning": "ruby",
  "packageRules": [
    {
      // Ruby: Ruby on Rails のパッケージをまとめてアップデートする
      "matchDatasources": ["rubygems"],
      "groupName": "RubyGems packages",
      "rangeStrategy": "update-lockfile",
      "automerge": false
    },
    {
      // Ruby: アップデートに問題のあるgemをバージョン固定する
      "matchDatasources": ["rubygems"],
      "matchPackageNames": [
        "puma" // テストのために固定する
      ],
      "enabled": false
    },
    {
      // 各種設定ファイルに記載された Ruby のバージョンをまとめて更新する
      "matchPackageNames": ["ruby"],
      "groupName": "Ruby",


    }
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  // MR の自動マージは行わない
  "automerge": false,
  "platformAutomerge": false,
  "labels": ["dependencies"],
  "assignees": [],
  "reviewers": [],
  // MR の作成上限をなくす
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  // majorの更新が入っていても同じMRにまとめる
  "separateMajorMinor": false,
  "lockFileMaintenance": {
    "enabled": true,
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _VERSION variables in Dockerfiles",
      "managerFilePatterns": [
        "/(^|/|\\.)Dockerfile$/",
        "/(^|/)Dockerfile\\.[^/]*$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s(?:ENV|ARG) .+?_VERSION=(?<currentValue>.+?)\\s"
      ]
    }
  ]
  "packageRules": [
    {
      // Ruby: Ruby on Rails のパッケージをまとめてアップデートする
      "matchDatasources": ["rubygems"],
      "groupName": "RubyGems packages",
      "rangeStrategy": "update-lockfile",
      "automerge": false
    },
    {
      // Ruby: アップデートに問題のあるgemをバージョン固定する
      "matchDatasources": ["rubygems"],
      "matchPackageNames": [
        "puma" // テストのために固定する
      ],
      "enabled": false
    },
    {
      // 各種設定ファイルに記載された Ruby のバージョンをまとめて更新する
      "matchPackageNames": ["ruby"],
      "groupName": "Ruby"
    }
  ]
}
